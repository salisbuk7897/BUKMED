                                div(class="input-group-text") 
                                    i(class="fas fa-key")
                            input(type="password" class="form-control" id="pwd" name='pwd' placeholder="Password")
                    div(class="form-group")
                        label(for="cpwd") Comfirm Password
                        div(class="input-group mb-2")
                            div(class="input-group-prepend")
                                div(class="input-group-text") 
                                    i(class="fas fa-key")
                            input(type="password" class="form-control" id="cpwd" name='cpwd' placeholder="Comfirm Password")
                    div(class="form-group")
                        label(for="pic") Profile Pic(Optional)
                        div(class="input-group mb-2")
                            div(class="input-group-prepend")
                                div(class="input-group-text") 
                                    i(class="fas fa-portrait")
                            input(type="file" class="form-control" id="pic" name='pic' placeholder="Password")
            button(type='submit' class='btn btn-primary' id="rmf3b") Register
        

                