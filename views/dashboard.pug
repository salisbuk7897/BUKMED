extend layout

block content
    div(style={"margin-left":"2%", "width":"98%", 'height':"90vh", "overflow":"auto"})
        .row(style={"width":"98%","margin-top":"2%"})
            .col-md-6.float-right
                if(pic === 'No Picture')
                    img(src=`/images/logo.png`, class="float-right" style={"border-radius":"50%", "height":"130px", "width":"110px"})
                else
                    img(src=`data:image/gif;base64,${pic}`, class="float-right" style={"border-radius":"50%", "height":"130px", "width":"110px"})
            .col.md-6(style={"margin":"auto"})
                h3(style={"color":"blue"}) !{fname} !{lname}
                h5(style={"color":"blue"}) Contribution Level: !{clevel}
        hr
        h3 Information
        hr(style={"margin":"0"})
        .row(style={"width":"96%", "margin-left":"2%"})
            .col-md-6
                h5(style={"margin-top":"10px"}) School: 
                p(style={"color":"blue","font-size":"18px"}) !{school}
                h5(style={"margin-top":"10px"}) Department:
                p(style={"color":"blue","font-size":"18px"}) !{dept}
            .col-md-6
                h5(style={"margin-top":"10px"}) Email:
                p(style={"color":"blue","font-size":"18px"}) !{email}
                h5(style={"margin-top":"10px"}) School Level:
                p(style={"color":"blue","font-size":"18px"}) !{lvl}
        br
        h3 Contributions
        hr(style={"margin":"0"})
        .row(style={"width":"96%", "margin-left":"2%"})
            .col-md-6
                h5(style={"margin-top":"10px", "text-align":"center"}) Number Of Questions Contributed: 
                p(style={"font-size":"72px", "text-align":"center","color":"blue"}) !{noq}
            .col-md-6
                h5(style={"margin-top":"10px", "text-align":"center"}) Number Of Questions Approved: 
                p(style={"font-size":"72px", "text-align":"center","color":"blue"}) !{qap}
        br
        h3 Past Questions
        hr(style={"margin":"0"})
        .row(style={"width":"96%", "margin-left":"2%"})
            -for(dat of pastq)
                .col-md-4(style={})
                    form(action=`/managepq?user=${username}&pqname=${dat.name}&type=${dat.type}`, method='post')
                        div(style={"border":"solid", "border-color":"blue", "width":'96%', "padding":"10%", "padding-top":"1%", 'border-style': 'outset'})
                            h5(style={"margin-top":"10px", "text-align":"center"}) Name: !{dat.name} 
                            p(style={}) Year: !{dat.year}
                            p(style={}) Type: !{(dat.type).toUpperCase()}
                            button(type="submit" style={ "margin-bottom":"1%"} class="btn btn-primary float-right") Manage
                            br
                