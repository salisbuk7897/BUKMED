doctype html

html
  head
    block header
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='/stylesheets/bootstrap/css/bootstrap.min.css')
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary(style={"color":"teal"})
      a.navbar-brand(href='#') 
        img(src="/images/logo.png", height="30", width="30")
        a.navbar-brand(href='/', style={'font-family': 'Calisto MT'}) QueBank

      button.navbar-toggler(type='button', class="navbar-toggle collapsed", data-toggle='collapse', data-target='#navbarButton', aria-controls='navbarButton', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
    
      .collapse.navbar-collapse(id='navbarButton')
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(style={'font-family': 'Calisto MT'}, href='/dashboard') Dashboard
          li.nav-item.active
            a.nav-link(style={'font-family': 'Calisto MT'}, href='/add_question') Add Questions
          li.nav-item.active
            a.nav-link(style={'font-family': 'Calisto MT'}, href='/reg_pq') Register PQ
          li.nav-item.active
            a.nav-link(style={'font-family': 'Calisto MT'}, href='/add_objpq') Add MCQ PQ
          li.nav-item.active
            a.nav-link(style={'font-family': 'Calisto MT'}, href='/add_scqpq') Add SCQ PQ
          li.nav-item.active
            a.nav-link(style={'font-family': 'Calisto MT'}, href='/add_esspq') Add Essay PQ
          li.nav-item.active
            a.nav-link(style={'font-family': 'Calisto MT'}, href='/admin') Admin
        if(session.name)
          ul.navbar-nav.float-right
            li.nav-item.active
              a.nav-link(style={'font-family': 'Calisto MT'}, href='/dashboard') Welcome !{session.name}
            li.nav-item.active
              a.nav-link(style={'font-family': 'Calisto MT'}, href='/log_out') Log out
        else
          ul.navbar-nav.float-right
            li.nav-item.active
              a.nav-link(style={'font-family': 'Calisto MT'}, href='/register') Register
            li.nav-item.active
              a.nav-link(style={'font-family': 'Calisto MT'}, href='/log_in') Log In

    
