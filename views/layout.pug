doctype html

html
  head
    block header
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='/stylesheets/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary(style={"color":"teal"})
      a.navbar-brand(href='#') 
        img(src="/images/logo.png", height="30", width="30")
        a.navbar-brand(href='/') QueBank

      button.navbar-toggler(type='button', class="navbar-toggle collapsed", data-toggle='collapse', data-target='#navbarButton', aria-controls='navbarButton', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
    
      .collapse.navbar-collapse(id='navbarButton')
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/dashboard') Dashboard
          li.nav-item.active
            a.nav-link(href='/add_question') Add Questions
          li.nav-item.active
            a.nav-link(href='/reg_pq') Register PQ
          li.nav-item.active
            a.nav-link(href='/add_objpq') Add MCQ PQ
          li.nav-item.active
            a.nav-link(href='/add_scqpq') Add SCQ PQ
          li.nav-item.active
            a.nav-link(href='/add_esspq') Add Essay PQ
          li.nav-item.active
            a.nav-link(href='/admin') Admin
        if(session.name)
          ul.navbar-nav.float-right
            li.nav-item.active
              a.nav-link(href='/dashboard') Welcome !{session.name}
            li.nav-item.active
              a.nav-link(href='/log_out') Log out
        else
          ul.navbar-nav.float-right
            li.nav-item.active
              a.nav-link(href='/log_in') Log In

    
body
  block content

  .page-footer.font-small.blue.fixed-bottom
    a(style={"font-size":"18px", "font-weight":"bold"},href="#") (c) BUKMEDS 2021
  
  block scripts
    script(src='https://code.jquery.com/jquery-3.5.1.min.js')
    script(src='/stylesheets/bootstrap/js/bootstrap.min.js')
    script(src='/stylesheets/bootstrap/js/bootstrap.bundle.min.js')
  