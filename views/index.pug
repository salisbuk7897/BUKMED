extends layout

block header
  style.
    .mySlides {display: none;}
    img {
      vertical-align: middle;
    }

    /* Slideshow container */
    .slideshow-container {
      width: 100%;
      position: relative;
      height: 58vh;
      background-size: cover;
      background-image: url('/images/phoo.jpeg');
    }

    /* Caption text */
    .text {
      font-family: "Times New Roman", Times, serif;
      color: gold;
      font-size: 20px;
      font-weight: bold;
      padding: 8px 12px;
      position: absolute;
      bottom: 8px;
      width: 96%;
      text-align: center;
    }

    /* Number text (1/3 etc) */
    .numbertext {
      font-family: "Times New Roman", Times, serif;
      color: gold;
      font-size: 12px;
      padding: 8px 12px;
      position: absolute;
      top: 0;
    }

    /* Fading animation */
    .faded {
      -webkit-animation-name: fade;
      -webkit-animation-duration: 1.5s;
      animation-name: fade;
      animation-duration: 1.5s;
    }

    .imgclass {
      width:50%;
      height: 50vh;
    }

    .htext{
      font-family: "Times New Roman", Times, serif;
      text-align: center;
      color: blue;
    }

    .ptext{
      font-family: "Times New Roman", Times, serif;
      font-size: 18px;
      text-align: center;
    }


    @-webkit-keyframes faded {
      from {opacity: .4} 
      to {opacity: 1}
    }

    @keyframes faded {
      from {opacity: .4} 
      to {opacity: 1}
    }

    /* On smaller screens, decrease text size */
    @media only screen and (max-width: 300px) {
      .text {font-size: 11px}
    }
    
    @media screen and (max-width: 720px) {
      .imgclass {
        width: 100%;
        height: 45vh;
      }

      .slideshow-container {
        width: 100%;
        position: relative;
        height: 50vh;
        background-color: white;
      }

      .text {
        font-family: "Times New Roman", Times, serif;
        color: gold;
        font-size: 14px;
        font-weight: bold;
        padding: 8px 12px;
        position: absolute;
        bottom: 8px;
        width: 96%;
        text-align: center;
      }

      .htext{
        font-family: "Times New Roman", Times, serif;
        font-size: 18px;
        text-align: center;
        color: blue;
      }

      .ptext{
        font-family: "Times New Roman", Times, serif;
        font-size: 14px;
        text-align: center;
      }

      .row{
        margin-left: 1%;
      }


    }

block content
  .slideshow-container
    .mySlides.faded
      div(class='numbertext') 1 / 2
      img(class="imgclass", src="/images/bg1.png")
      div(class="text") Accessible via Andoid and Web Browsers

    .mySlides.faded
      div(class='numbertext') 2 / 2
      img(class="imgclass", src="/images/bg2.png")
      div(class="text") Accessible via Andoid and Web Browsers
  br
  .row(style={'width':'98%', 'margin-left':"1%"})
    .col-md-4
      h3(class= "htext") Mission
      hr
      p(class= "ptext") To create a centralised MBBS question storage and provide flexible practice modes to aid in preperation of Medical Exams, Test or Quiz.
    .col-md-4
      h3(class= "htext") Vision
      hr
      p(class= "ptext") To have a large storage of Verified and Reliable MBBS Practice questions that can be used for internal and external MBBS Exam Preparation.
    .col-md-4
      h3(class= "htext") Support
      hr
      p(class= "ptext") Quebank will be build by the students, for the students. It will be maintained by volunteer contributors and managed by BUKMEDS.
  br


block scripts
  script(src='https://code.jquery.com/jquery-3.5.1.min.js')
  script(src='/stylesheets/bootstrap/js/bootstrap.min.js')
  script(src='/stylesheets/bootstrap/js/bootstrap.bundle.min.js')
  script.
    var slideIndex = 0;
    showSlides();

    function showSlides() {
      var i;
      var slides = document.getElementsByClassName("mySlides");
      for (i = 0; i < slides.length; i++) {
        slides[i].style.display = "none";  
      }
      slideIndex++;
      if (slideIndex > slides.length) {slideIndex = 1}    
      slides[slideIndex-1].style.display = "block";  
      setTimeout(showSlides, 2000); // Change image every 2 seconds
    }
