    script.
        //for Adding Subcourse
        function getSC1() {
            var data = {course: $("#cs").val()};
            $.ajax({
                dataType: "json",
                type: 'post',
                url: '/getsc',
                data: data,
                
            })
            .done(function(e){
                window.reloadTable("sctable");
                $("#cname").html((e.c).toUpperCase());
                $.each(e.sc, function(i){
                    var table = document.getElementById("sctable");
                    var row = table.insertRow();
                    var cell1 = row.insertCell(0);
                    cell1.innerHTML = e.sc[i];
                })
            });
        }

        function subCourse() {
            var data = {course: $("#cs").val(), subCourse: $("#scs").val()};
            var d = ($("#scs").val()).split(",");
            $.each(d, function(i){
                var table = document.getElementById("sctable");
                var row = table.insertRow();
                var cell1 = row.insertCell(0);
                cell1.innerHTML = d[i];
            })
            document.getElementById("scs").value = "";
            $.ajax({
                type: 'post',
                url: '/addsc',
                data: data
            })
            .done(function(e){
                
            });
            //alert(`c: ${c}`);
        }

        //For Adding Topics
        function getSC() {
            var data = {course: $("#cs1").val()};
            $.ajax({
                dataType: "json",
                type: 'post',
                url: '/getsct',
                data: data,
                
