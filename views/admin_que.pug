block header
    style.
        form {
            --background: white;
            --border: rgba(0, 0, 0, 0.125);
            --borderDark: rgba(0, 0, 0, 0.25);
            --borderDarker: rgba(0, 0, 0, 0.5);
            --bgColorH: 0;
            --bgColorS: 0%;
            --bgColorL: 98%;
            --fgColorH: 210;
            --fgColorS: 50%;
            --fgColorL: 38%;
            --shadeDark: 0.3;
            --shadeLight: 0.7;
            --shadeNormal: 0.5;
            --borderRadius: 0.125rem;
            --highlight: #306090;
            background: white;
            border: 1px solid var(--border);
            border-radius: var(--borderRadius);
            box-shadow: 0 1rem 1rem -0.75rem var(--border);
            display: flex;
            flex-direction: column;
            padding: 1rem;
            position: relative;
            overflow: hidden;
        }

        .topa{
            margin: auto;
            width: 100%;
            border: 5px;
            padding: 10px;
        }

        .clegend{
            font-family: 'Calisto MT';
        }

        .hdd{
            font-family: 'Calisto MT';
            font-size: 25px;
        }

        @media screen and (max-width: 720px) {
            body{
                margin:0px;
                font-family: "Times New Roman", Times, serif;
                }
            .topa{
                margin:auto;
                padding:1%;
                width:100%;
                border: 0px;
                padding: 1%;
            }
            .hdd{
                font-family: "Times New Roman", Times, serif;
                font-size: 16px;
            }

            .clegend{
                font-size:25px;
                font-family: "Times New Roman", Times, serif;
            }

            form {
                width: 98%;
                position: relative;
                margin-bottom: 20px;
            }
        }

