extend layout
block header
    style.
        form {
            --background: white;
            --border: rgba(0, 0, 0, 0.125);
            --borderDark: rgba(0, 0, 0, 0.25);
            --borderDarker: rgba(0, 0, 0, 0.5);
            --bgColorH: 0;
            --bgColorS: 0%;
            --bgColorL: 98%;
            --fgColorH: 210;
            --fgColorS: 50%;
            --fgColorL: 38%;
            --shadeDark: 0.3;
            --shadeLight: 0.7;
            --shadeNormal: 0.5;
            --borderRadius: 0.125rem;
            --highlight: #306090;
            background: white;
            border: 1px solid var(--border);
            border-radius: var(--borderRadius);
            box-shadow: 0 1rem 1rem -0.75rem var(--border);
            display: flex;
            flex-direction: column;
            padding: 1rem;
            position: relative;
            overflow: hidden;
        }

        .topa{
            width:45%;
            margin: auto;
            border: 5px;
            padding: 10px;
            margin-top: 10vh;
        }

        .clegend{
            font-family: 'Calisto MT';
        }

        @media screen and (max-width: 720px) {
            body{margin:0px;}
            .topa{
                width:96%;
                margin: auto;
                border: 5px;
                padding: 10px;
                margin-top: 10vh;
            }
            .clegend{
                font-size:25px;
                font-family: "Times New Roman", Times, serif;
            }
        }
block content
    if(msg)
        div(class="alert alert-success" role="alert" style={'text-align':'center'}) !{msg}
    div(class='topa')
        form(action="/reg_pq", method="post" class="needs-validation" novalidate)
            legend
                center
                    h2
                        b( class='clegend') Register Past Question
            div(class="form-group")
                label(for='name') Identifier Name
                input(type="text" class="form-control" id="name" name="name" style={"margin-right": "10px"} required)
                div(class="invalid-feedback") Please Enter a name.
                        
            div(class="form-group")
                label(for='year') Year
                input(type="text" class="form-control" id="year" name="year" style={"margin-right": "10px"} required)
                div(class="invalid-feedback") Please Enter a Year.

            div(class="form-group")
                label(for='qtype') Type
                select.custom-select(style={"margin-right": "10px"}, name="qtype", id="qtype" required)
                        option(value='' disabled selected) Select Type
                        option(value='mcq') MCQ
                        option(value='scq') SCQ
                        option(value='essay') Essay
                div(class="invalid-feedback") Please Select a Question Paper Type.

            button(type='submit' style={"width":"100%", "margin-top":"20px"} class="btn btn-primary float-right") Register Past Question

block scripts
    script(src='https://code.jquery.com/jquery-3.5.1.min.js')
    script(src='/stylesheets/bootstrap/js/bootstrap.min.js')
    script(src='/stylesheets/bootstrap/js/bootstrap.bundle.min.js')
    script.
        (function() {
            'use strict';
                window.addEventListener('load', function() {
                    // Fetch all the forms we want to apply custom Bootstrap validation styles to
                    var forms = document.getElementsByClassName('needs-validation');
                    // Loop over them and prevent submission
                    var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                    });
                }, false);
            })();
                  